<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:rowCount="17"
    android:columnCount="8"
    tools:context=".MainActivity" >

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="fill"
        android:id="@+id/textResult1"
        android:layout_columnSpan="8"
        android:height="300px"
        android:textColor="#000"
        android:background="#eee"
        android:layout_row="0"
        android:layout_column="0"
        android:textSize="30dp"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="清除"
        android:layout_gravity="fill_horizontal"
        android:id="@+id/buttonClear"
        android:layout_columnSpan="7"
        android:layout_row="2"
        android:layout_column="0"
        android:textSize="30dp"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="80dp"
        android:text="1"
        android:id="@+id/buttonOne"
        android:layout_row="3"
        android:layout_column="0"
        android:textSize="30dp"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="80dp"
        android:text="5"
        android:id="@+id/buttonFive"
        android:layout_row="3"
        android:layout_column="1"
        android:textSize="30dp"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="80dp"
        android:text="9"
        android:id="@+id/button1Nine"
        android:layout_row="3"
        android:layout_column="3"
        android:textSize="30dp"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="80dp"
        android:text="*"
        android:id="@+id/buttonMul"
        android:layout_row="3"
        android:layout_column="5"
        android:textSize="30dp"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="80dp"
        android:text="+"
        android:id="@+id/buttonPlus"
        android:layout_row="7"
        android:layout_column="3"
        android:textSize="30dp"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="80dp"
        android:text="2"
        android:id="@+id/buttonTwo"
        android:layout_row="6"
        android:layout_column="0"
        android:textSize="30dp"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="80dp"
        android:text="6"
        android:id="@+id/buttonSix"
        android:layout_row="6"
        android:layout_column="1"
        android:textSize="30dp"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="80dp"
        android:text="0"
        android:id="@+id/button1Zero"
        android:layout_row="6"
        android:layout_column="3"
        android:textSize="30dp"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="80dp"
        android:text="/"
        android:id="@+id/button"
        android:layout_row="6"
        android:layout_column="5"
        android:textSize="30dp"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="80dp"
        android:text="3"
        android:id="@+id/buttonThree"
        android:layout_row="7"
        android:layout_column="0"
        android:textSize="30dp"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="80dp"
        android:text="7"
        android:id="@+id/button1Seven"
        android:layout_row="7"
        android:layout_column="1"
        android:textSize="30dp"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="80dp"
        android:text="."
        android:id="@+id/button1Point"
        android:layout_row="7"
        android:layout_column="5"
        android:textSize="30dp"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="80dp"
        android:text="4"
        android:id="@+id/buttonFour"
        android:layout_row="8"
        android:layout_column="0"
        android:textSize="30dp"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="80dp"
        android:text="8"
        android:id="@+id/button1Eight"
        android:layout_row="8"
        android:layout_column="1"
        android:textSize="30dp"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="80dp"
        android:text="-"
        android:id="@+id/buttonMinus"
        android:layout_row="8"
        android:layout_column="3"
        android:textSize="30dp"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="80dp"
        android:layout_gravity="fill_vertical"
        android:text="="
        android:id="@+id/buttonEqual"
        android:layout_row="8"
        android:layout_column="5"
        android:textSize="30dp"/>


</GridLayout>
